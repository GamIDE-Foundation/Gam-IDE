<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:padding="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    app:iconTint="?colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/app_name"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/create_project"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_card_height"
                            android:orientation="vertical"
                            app:cardCornerRadius="17dp"
                            style="?attr/materialCardViewFilledStyle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/home_card_icon_width"
                                    android:layout_height="@dimen/home_card_icon_height"
                                    android:src="@drawable/ic_add_24"
                                    android:scaleType="fitCenter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/title_create_project"
                                    android:textSize="@dimen/home_card_title_size" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/open_project"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_card_height"
                            android:orientation="vertical"
                            app:cardCornerRadius="17dp"
                            style="?attr/materialCardViewFilledStyle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/home_card_icon_width"
                                    android:layout_height="@dimen/home_card_icon_height"
                                    android:src="@drawable/ic_folder_open_24"
                                    android:scaleType="fitCenter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/title_open_project"
                                    android:textSize="@dimen/home_card_title_size" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/open_settings"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_card_height"
                            android:orientation="vertical"
                            app:cardCornerRadius="17dp"
                            style="?attr/materialCardViewFilledStyle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/home_card_icon_width"
                                    android:layout_height="@dimen/home_card_icon_height"
                                    android:src="@drawable/ic_settings_anim"
                                    android:scaleType="fitCenter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/common_word_settings"
                                    android:textSize="@dimen/home_card_title_size" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/open_terminal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_card_height"
                            android:orientation="vertical"
                            app:cardCornerRadius="17dp"
                            style="?attr/materialCardViewFilledStyle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:padding="11dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/home_card_icon_width"
                                    android:layout_height="@dimen/home_card_icon_height"
                                    android:src="@drawable/ic_info_24"
                                    android:scaleType="fitCenter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/title_terminal"
                                    android:textSize="@dimen/home_card_title_size" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:id="@+id/open_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_open_editor"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_code_24"
                    android:layout_marginBottom="7dp" />

                <Button
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:id="@+id/open_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_title"
                    app:icon="@drawable/ic_info_24" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
